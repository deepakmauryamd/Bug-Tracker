@model List<UserRoleModel>
@{
    ViewData["Title"] = "Add Or Remove From Role";
    var roleId = ViewBag.RoleId;
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Add Or Remove Users From <span class="text-bold">@ViewBag.RoleName</span> Role</h2>
            <form method="POST" class="mt-3" asp-action="EditUserInRole" asp-controller="Admin" asp-route-roleId="@roleId">
                @for(int i=0; i<Model.Count; i++)
                {
                    <div class="form-check mt-2">
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label" >
                            @Model[i].Username
                        </label>
                        <input asp-for="@Model[i].UserId" type='hidden'/>
                        <input asp-for="@Model[i].Username" type="hidden"/>
                    </div>
                }
                <div class="form-group mt-5">
                    <a class="btn btn-secondary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@roleId">Cancel</a>
                    <input type="submit" class="btn btn-primary ml-5" value="Submit"/>
                </div>
            </form>
        </div>
    </div>
</div>