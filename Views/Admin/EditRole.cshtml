@model EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3 class="display-5">Edit Role</h3>
            <form method="POST" asp-controller="Admin" asp-action="EditRole">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input asp-for="Id" readonly class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update"/>
                    <a asp-controller="Admin" asp-action="DisplayRoles" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Users in this role
                    </div>
                    <div class="card-body">
                        @if(Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <p class="card-title">@user</p>
                            }
                        }
                        else
                        {
                            <p class="card-title">No users are present</p>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUserInRole" asp-controller="Admin" asp-route-roleId = "@Model.Id" class="btn btn-primary">Add or Remove Users</a>
                    </div>
                </div>
        </div>
    </div>
</div>