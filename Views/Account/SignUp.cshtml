@model UserSignUpModel;
@{
    ViewData["Title"] = "Sign Up";
}

<div class="container row mt-5 d-flex justify-content-center">
    <div class="col-md-6">
        <form method="POST" asp-action="signup" asp-controller="Account">
        <h3 class="display-5 font-weight-bold mb-4">Sign Up</h3>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if(ViewBag.Message != null)
            {
                <p class="text-danger">@ViewBag.Message</p>
            }
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control"/>
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control"/>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
             <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="form-control text-uppercase btn btn-block btn-primary" value="Sign up"/>
            </div>
        </form>
        <div>
            <a asp-action="login" asp-controller="Account">Already a user? Login</a>
        </div>
    </div>
</div>