@model UserLoginModel;
@{
    ViewData["Title"] = "Login";
}

<div class="jumbotron vertical-center bg-transparent">
    <div class="container d-flex justify-content-center">
        <div class="col-md-6">
        <h3 class="display-5 font-weight-bold mb-4">Enter your credentials to login</h3>
            <form method="POST" asp-action="login" asp-controller="Account">
                @if(ViewBag.Message != null)
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control"/>
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group mt-5">
                    <input type="submit" class="form-control text-uppercase btn btn-block btn-primary" value="Login"/>
                </div>
            </form>
            <div>
                <a asp-action="signup" asp-controller="Account">Not a user? Sign up</a>
            </div>
        </div>
    </div>
</div>