@model ProjectModel;
@{
    ViewData["Title"] = "Edit Project";
}

<div class="container d-flex justify-content-center mt-lg-5">
    <div class="col-md-8">
        <h4 class="display-5 text-capitalize  mb-lg-5">@ViewData["Title"]</h4>
        <form method="POST" asp-controller="Home" asp-action="EditProject">
            @if(@ViewBag.message != null)
            {
                <p class="text-danger">@ViewBag.message</p>
            }
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="ProjectManagerId"></label>
                        <select asp-for="ProjectManagerId" class="form-control" asp-items="@ViewBag.projectManagers">
                            <option value="">Select project manager</option>
                        </select>
                        <span asp-validation-for="ProjectManagerId"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TeamMembersId"></label>
                <select asp-for="TeamMembersId" class="form-control" asp-items="@ViewBag.users">
                    
                </select>
                <span asp-validation-for="TeamMembersId"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="form-control btn btn-lg btn-primary text-uppercase mt-lg-5" value="Submit"/>
            </div>
        </form>
    </div>
</div>
